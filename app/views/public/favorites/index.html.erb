<div class="container-fluid">
  <div class="row offset-1 py-3">
    <h2>いいね一覧</h2>
  </div>
  
  <table class="table table-hover table-inverse">
    <% if favorited_posts attached? %>
      <tbody>
        <% @favorite_posts.each do |post| %>
          <tr>
            <td>
              <td><%= link_to(image_tag(post.image, size: "200x200"), post_path(post.id) %></td>
              <td><%= link_to (post.title), post_path(post.id) %></td>
            </td>
          </tr>
      </tbody>
    <% else %>
      <h2>いいねはまだありません</h2>
    </table>
</div>