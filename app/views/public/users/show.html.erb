<% if @user.id == current_user.id %>
  <% if @user.image.attached? %>
    <%= image_tag @user.image %>
  <% else %>
    <i class='fa-regular fa-user'></i>
  <% end %></br>
  <%= @user.account %></br>
  <%= @user.name %></br>
  <%= @user.height %>cm</br>
  <%= @user.introduction %></br>
  <%= link_to "フォロー数:#{@user.followings.count}", user_followings_path(@user.id) %>
  <%= link_to "フォロワー数:#{@user.followers.count}",user_followers_path(@user.id) %></br>
  <% if @user.id == current_user.id %>
    <%= link_to 'プロフィール編集', edit_user_path %></br>
    <%= link_to 'いいね一覧', favorites_user_path(@user) %></br>
  <% else %>
    <% if current_user.following?(@user) %>
      <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
    <% end %>
  <% end %>
  <a href='/posts/new'>
    <i class="fa-solid fa-plus"></i>
  </a></br>
  <% @posts.each do |post| %>
    <%= link_to (image_tag post.image,size: "200×200"), post_path(post.id) %>
    <%= post.title %>
  <% end %>
<% else %>
  <% if @user.image.attached? %>
    <%= image_tag @user.image %>
  <% else %>
    "<i class='fa-regular fa-user'></i>".html_safe
  <% end %></br>
  <%= @user.account %></br>
  <%= @user.name %></br>
  <%= @user.height %>cm</br>
  <%= @user.introduction %></br>
  <%= @posts.each do |post| %>
    <%= link_to (image_tag post.image,size: "100×100"), post_path(post.id) %></br>
    <%= image_tag post.user.get_profile_image(100,100) %>
    <%= post.title %>
  <% end %>
<% end %>