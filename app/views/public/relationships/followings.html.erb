<div class="container-fluid">
  <div class="row offset-1 py-3">
    <h2 style="font-family: 'Noto Serif JP'; font-weight: 300;">フォロー 一覧</h2>
  </div>
  
  <% if @users.exists? %>
    <table class="table table-hover table-inverse">
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <div class="row">
                <%= image_tag user.get_image(100,100), class: "mt-3 rounded-circle"; %>
                <div class="col my-auto">
                  <%= link_to user.account,user_path(user.id) %></br>
                  <%= user.name %> / <%= user.height %>cm
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h4>ユーザーはいません</h4>
  <% end %>
  
</div>